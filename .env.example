# =============================================================================
# Twitchminert-GUI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env file with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Application Configuration
# -----------------------------------------------------------------------------
# Environment: development, production, or testing
FLASK_ENV=development

# Enable/disable Flask debug mode (True for development, False for production)
FLASK_DEBUG=True

# Main Flask application file
FLASK_APP=app.py

# Secret key for session management and CSRF protection
# IMPORTANT: Generate a secure random key for production!
# You can generate one with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here-change-in-production-use-strong-random-key

# -----------------------------------------------------------------------------
# Twitch API Configuration
# -----------------------------------------------------------------------------
# Get your Twitch Developer credentials from: https://dev.twitch.tv/console

# Your Twitch account username (lowercase)
TWITCH_USERNAME=your-twitch-username

# Twitch account password (optional, used for some authentication methods)
TWITCH_PASSWORD=your-twitch-password

# Twitch Application Client ID
TWITCH_CLIENT_ID=your-client-id-from-twitch-dev-console

# Twitch Application Client Secret
TWITCH_CLIENT_SECRET=your-client-secret-from-twitch-dev-console

# OAuth2 redirect URI (must match your Twitch app settings)
TWITCH_REDIRECT_URI=http://localhost:5000/callback

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database connection string
# SQLite (default): sqlite:///twitchminert.db
# PostgreSQL: postgresql://user:password@localhost/dbname
# MySQL: mysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///twitchminert.db

# -----------------------------------------------------------------------------
# Notification Services (Optional)
# -----------------------------------------------------------------------------

# Telegram Bot Configuration
# Create a bot with @BotFather on Telegram to get these values
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_ENABLED=False

# Discord Webhook Configuration
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_ENABLED=False

# Email Notifications (Optional)
EMAIL_ENABLED=False
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password-or-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Enable debug mode for detailed error messages
DEBUG=True

# Server host address (use 0.0.0.0 to allow external connections)
HOST=127.0.0.1

# Server port
PORT=5000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/twitchminert.log

# -----------------------------------------------------------------------------
# Twitch Channel Points Miner Settings
# -----------------------------------------------------------------------------

# Minimum watch time per channel (in minutes)
MIN_WATCH_TIME=15

# Maximum number of concurrent streams to watch
MAX_CONCURRENT_STREAMS=2

# Auto-claim channel points
AUTO_CLAIM_POINTS=True

# Auto-claim drops
AUTO_CLAIM_DROPS=True

# Follow streamers automatically when watching
AUTO_FOLLOW=False

# Priority order for channel selection: POINTS_ASCENDING, POINTS_DESCENDING, FOLLOWERS, VIEWERS
CHANNEL_PRIORITY=POINTS_DESCENDING

# -----------------------------------------------------------------------------
# Drops Miner Settings
# -----------------------------------------------------------------------------

# Enable Twitch Drops mining
DROPS_ENABLED=True

# Check for new drops every X minutes
DROPS_CHECK_INTERVAL=5

# Auto-watch campaigns for drops
AUTO_WATCH_CAMPAIGNS=True

# Prioritize drops over channel points
PRIORITIZE_DROPS=True

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------

# Enable CORS (Cross-Origin Resource Sharing)
CORS_ENABLED=True

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Enable rate limiting
RATE_LIMIT_ENABLED=True

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=60

# Session timeout (in minutes)
SESSION_TIMEOUT=1440

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------

# Number of worker threads
WORKERS=4

# Enable caching
CACHE_ENABLED=True

# Cache timeout (in seconds)
CACHE_TIMEOUT=300

# -----------------------------------------------------------------------------
# Development Settings (Optional)
# -----------------------------------------------------------------------------

# Enable hot reload in development
HOT_RELOAD=True

# Enable SQL query logging
SQL_ECHO=False

# Profiling (for performance testing)
PROFILE=False
